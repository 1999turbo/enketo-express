extends ../layout

block style
  link(rel='stylesheet', href='/css/webform_default.css') 

block script
  if environment == "production"
    script(src="/js/webform-combined.min.js")
  else
    script(data-main="/js/src/main-webform.js", src="/lib/enketo-core/lib/require.js")

block global
  script.
    var settings = {};
    settings['supportEmail'] = '#{supportEmail}';
    settings['modernBrowsersURL'] = 'modern-browsers';
  if returnUrl
    script.
      var returnURL = '#{returnUrl}';
  if model
    script.
      var modelStr = !{model};
  if instance
    script.
      var instanceStr = !{instance};
 
block content
  .main
    article.paper
      include component/_form-header
      | !{form}
      unless form
        progress
      include component/_form-footer
    
  include component/_dialogs
