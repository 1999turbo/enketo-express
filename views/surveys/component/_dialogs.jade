#feedback-bar.alert.alert-warning
  span.glyphicon.glyphicon-info-sign
  button.close &times;

#dialog-alert.modal.fade(role="dialog", aria-labelledby="alert dialog", aria-hidden="true", data-keyboard="true")
  .modal-dialog
    .modal-content 
      .modal-header
        button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
        h3
      .modal-body
        p
      .modal-footer
        span.self-destruct-timer
        button.btn(data-dismiss="modal", aria-hidden="true") Close

#dialog-confirm.modal.fade(role="dialog", aria-labelledby="confirmation dialog", aria-hidden="true", data-keyboard="true")
  .modal-dialog
    .modal-content 
      .modal-header
        button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
        h3
      .modal-body
        p.alert.alert-danger
        p.msg
      .modal-footer
        span.self-destruct-timer
        button.btn.negative Close
        button.btn.btn-primary.positive Confirm

#dialog-save.modal.fade(role="dialog", aria-labelledby="confirmation dialog", aria-hidden="true", data-keyboard="true")
  .modal-dialog
    .modal-content 
      .modal-header
        button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
        h3
      .modal-body
        form(onsubmit="return false;")
          .alert.alert-danger
          label
            span Record Name
            span.or-hint.active This name allows you to easily find your draft record to finish it later. The record name will not be submitted to the server.
            input(name="record-name", type="text", required="required")
      .modal-footer
        span.self-destruct-timer
        button.btn.negative Close
        button.btn.btn-primary.positive Save & Close
